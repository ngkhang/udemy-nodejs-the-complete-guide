<%- include('../includes/head.ejs') %>

    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>

    <main>
        <h1><%= pageTitle %></h1>
        <% if (prods.length > 0) { %>
        <p>List of all the products...</p>
            <% for (let item of prods) { %>
                <div class="grid">
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= item.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= item.imageUrl %>" alt="<%= item.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= item.price %></h2>
                            <p class="product__description"><%= item.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/admin/edit-product" class="btn">Edit</a>
                            <form action="/admin/delete-product" method="post">
                                <button type="submit" class="btn">Delete</button>
                            </form>
                        </div>
                    </article>
                </div>
            <% } %>
        <% } else { %>
            <h2>No Product Pound!</h2>
        <% } %>
    </main>

<%- include('../includes/end.ejs') %>
